<div class="page-header">
  <h1>New Search Synonym</h1>
</div>

<%= simple_form_for @search_reference, url: synonyms_heading_search_references_path(heading), html: { class: 'search-reference-form' } do |f| %>
  <div class='row'>
    <div class='span12'>
      <%= f.input :title, label: 'Synonym',  input_html: { class: 'span6' } %>
    </div>
  </div>

  <div class='form-actions'>
    <%= f.button :submit, class: 'btn btn-success', data: { 'disable-with' => 'Working' } %>
    <%= link_to "Back", :back, class: 'btn' %>
  </div>
<% end %>
